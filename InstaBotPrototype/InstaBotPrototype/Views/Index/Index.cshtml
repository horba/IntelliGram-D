@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Instagram Bot settings</title>
    <link rel="stylesheet" type="text/css" href="~/css/layout.css">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
    <link rel="stylesheet" type="text/css" href="~/css/tags.css">
    <link href="https://fonts.googleapis.com/css?family=Lobster+Two" rel="stylesheet">
</head>
<body>

    <div class="page-container">
        <div class="header"><span class="welcome">IntelliGram</span></div>
        <div class="content-container">
            <div class="content-left"></div>
            <div class="content-center">
                <div class="hidden" id="authPage">
                    <div class="block centered">
                        <div>
                            <button class="btn btn-log-reg first" id="btnLogin">Log in</button><button class="btn btn-log-reg" id="btnSignup">Sign Up</button>
                        </div>
                        <div id="signIn" class="hidden">
                            <form action="/api/Authentication/Login" id="modalLogin" method="post">
                                <div>
                                    <input class="modal-input" id="Login" name="Login" placeholder="Login....." required type="text" value="" />
                                </div>
                                <div>
                                    <input class="modal-input" id="Password" name="Password" placeholder="Password......" required type="password" value="" />
                                </div>
                                <div class="error-message" id="loginError"></div>
                                <input class="btn hoverable-btn submit-btn" type="submit" value="Submit">
                            </form>
                        </div>
                        <div id="signUp">
                            <form action="/api/Authentication/Register" id="modalSignup" method="post">
                                <input class="modal-input" type="text" placeholder="Enter your login" name="Login" required /><br />
                                <input class="modal-input" id="password" type="password" placeholder="Enter your password" name="Password" required />
                                <input class="modal-input" id="confirm" type="password" placeholder="Confirm your password" required />
                                <input class="modal-input" type="email" placeholder="Enter your email" name="Email" required />
                                <div class="error-message" id="signUpError"></div>
                                <input class="btn hoverable-btn submit-btn" type="submit" value="Submit" />
                            </form>
                        </div>
                    </div>
                </div>
                <div id="configPage">
                    <div class="block">
                        <form id="configForm">
                            <div class="config-form-group">
                                <a class="form-left" href="https://t.me/IntelliGramBot">Go to the telegram bot</a><label id="verifyKeyLabel" />
                            </div>
                            <div class="config-form-group">
                                <a class="form-left" href="api/Instagram/Verify">Go to the instagram</a>
                            </div>
                            <div class="config-form-group">
                                <span>Tags</span>
                                <div class="wrapper">
                                    <div class="selected" id="selectedTags"><input class="hidden-input" type="text" id="tagInput" autocomplete="off"></div>
                                </div>
                                <ul class="list" id="tagList">
                                    <li class="tagComplete"></li>
                                    <li class="tagComplete"></li>
                                    <li class="tagComplete"></li>
                                </ul>
                            </div>
                            <div class="config-form-group">
                                <span>Topics</span>
                                <div class="wrapper">
                                    <div class="selected" id="selectedTopics"><input class="hidden-input" type="text" id="topicInput" autocomplete="off"></div>
                                </div>
                                <ul class="list" id="topicList">
                                    <li class="topicComplete"></li>
                                    <li class="topicComplete"></li>
                                    <li class="topicComplete"></li>
                                </ul>
                            </div>
                            <div class="centered">
                                <button id="logOut" class="btn hoverable-btn">Log out</button>
                            </div>
                        </form>
                    </div>
                    <div class="block">
                        <div style="margin-left: 30px; margin-top: 0">
                            <h3>Statistics</h3>
                            <div>Processed <span id="processed_posts">1012</span> posts</div>
                            <div>Matched 21 photos</div>
                            <div>Matched tags: 12</div>
                            <div>Matched topics: 9</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-right"></div>
        </div>
        <div class="footer footer-text">Â© 2017 IntelliGram-D</div>
    </div>



    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/script.js" type="text/javascript"></script>
    <script src="~/js/cookie.js"></script>
    <script src="~/js/authentication.js" type="text/javascript"></script>
</body>
</html>