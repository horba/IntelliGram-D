
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Instagram Bot settings</title>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
    <link href="https://fonts.googleapis.com/css?family=Lobster+Two" rel="stylesheet">
</head>
<body>
    <div id="authPage">
        <div class="auth-header">
            <button id="buttonSignUp" class="login-button">Sign Up</button>
            <button id="buttonLogin" class="login-button">Log in</button>
        </div>
        <p class="greeting">
            <span id="welcome">Welcome to the IntelliGram service</span>
        </p>


        <div class="modal" id="loginModal">
            <form action="/api/Authentication/Login" class="modal-window" id="loginForm" method="post">
                <span class="close" id="closeLogin">&times</span>
                <p class="modal-title">IntelliGram</p>
                <input class="form-field" id="Login" name="Login" placeholder="Login....." required type="text" value="" />
                <input class="form-field" id="Password" name="Password" placeholder="Password......" required type="text" value="" />                
                <div class="error-message" id="loginError"></div>
                <input class="submit-button" id="loginSubmit" type="submit" value="Login">
            </form>
        </div>
       
        <div class="modal" id="signUpModal">
            <form action="/api/Authentication/Register" class="modal-window" id="signUpForm" method="post">
                <span class="close" id="closeSignUp">&times</span>
                <p class="modal-title">IntelliGram</p>
                <input class="form-field" type="text" placeholder="Enter your login" name="Login" required /><br />
                <input class="form-field" type="password" placeholder="Enter your password" name="Password" required />
                <input class="form-field" type="password" placeholder="Confirm your password" required />
                <input class="form-field" type="email" placeholder="Enter your email" name="Email" required />
                <div class="error-message" id="signUpError"></div>
                <input class="submit-button" id="signUpSubmit" type="submit" value="Sign Up" />
            </form>
        </div>
    </div>
   
    <div class="page-container" id="configPage">
            <div class="header"><h1>Instagram bot admin page</h1></div>
            <div class="content-container">
                <div class="content-left"></div>

                <div class="content-center">
                    <div class="block">
                        <form id="configForm">
                            <div>
                                <label class ="form-left" >instagram username</label><input name="instaUsername" type="text" value="" placeholder="Johnsmith" />
                            </div>
                            <div>
                                <label class ="form-left" >instagram password</label><input name="instaPassword" type="text" value="" placeholder="Password" />
                            </div>
                            <div>
                                <label class ="form-left">telegram username</label><input name="telegramUsername" type="text" value="" placeholder="Johnsmith" />
                            </div>
                            <div>
                                <a class ="form-left" href="https://t.me/isdTestBot">Go to the telegram bot</a><label id="labelNumber"/>
                                    <script>
                                        document.getElementById('labelNumber').innerHTML =100000000000000000 * Math.random();
                                    </script>
                            </div>
                            <div>
                                <label class="form-left">tags</label><input name="tags" type="text" value="" placeholder="kittens, cats" />
                            </div>
                            <div>
                                <button id="getConfig" class="submit-button">Get configuration</button>
                                <button id="saveConfig" class="submit-button">Save configuration</button>
                            </div>
                            <div id="ajaxResult"></div>
                        </form>
                    </div>
                    <div class="block">
                        <h3>Statistics</h3>
                        <div>Processed <span id="processed_posts">1012</span> posts</div>
                        <div>Matched 21 photos</div>
                        <div>Matched tags: 12</div>
                        <div>Matched topics: 9</div>
                    </div>
                </div>
                <div class="content-right"></div>
            </div>
            <div class="footer">© 2017 IntelliGram-D</div>
        </div>



    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/script.js" type="text/javascript"></script>
    <script src="~/js/authentication.js" type="text/javascript"></script>
</html>